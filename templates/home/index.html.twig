{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container py-5">
    <h1>Accueil</h1>

    <div class="row">
        {% for post in posts %}
        <div class="col-12">
            <h3><a href="{{ path('app_post_show', {'id': post.id}) }}">{{ post.title }}</a></h3>
            {% for tag in post.tags %}
            <span>#{{ tag.label }}</span>
            {% endfor %}
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}